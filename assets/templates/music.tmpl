			function Queue(elem, attr) {
				this.elem = elem;
				this.attr = attr;
			}
			Queue.prototype.toArray = function() {
				var q = this.elem.dataset[this.attr];
				if (!q) { 
					return [];
				}
				return q.split(" ");
			}
			Queue.prototype.set = function(arr) {
				if (!arr || arr.length == 0) {
					this.clear();
				}
				this.elem.dataset[this.attr] = arr.join(" ");
			}
			Queue.prototype.clear = function() {
				delete this.elem.dataset[this.attr];
			}
			Queue.prototype.push = function(x) {
				var q = this.toArray();
				q.push(x);
				this.set(q);
			}
			Queue.prototype.unshift = function(x) {
				var q = this.toArray();
				q.unshift(x);
				this.set(q);
			}
			Queue.prototype.pop = function(x) {
				var q = this.toArray();
				var x = q[0];
				this.set(q.slice(1));
				return x;
			}
			Queue.prototype.peek = function() {
				var q = this.toArray();
				return q[0];
			}

